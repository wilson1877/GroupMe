<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateEvent">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createEventLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingBottom="30dp"
            android:text="Create an event"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_below="@+id/createEventLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:text="Title"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <EditText
            android:id="@+id/editTextTitle"
            android:layout_below="@+id/titleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:inputType="text"
            android:textSize="13dp"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/descLabel"
            android:layout_below="@+id/editTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="Description"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <EditText
            android:id="@+id/editTextDesc"
            android:layout_below="@id/descLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:inputType="textMultiLine"
            android:textSize="13dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/venueLabel"
            android:layout_below="@+id/editTextDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="Venue"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <EditText
            android:id="@+id/editTextVenue"
            android:layout_below="@id/venueLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:inputType="textMultiLine"
            android:textSize="13dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/dateLabel"
            android:layout_below="@+id/editTextVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingBottom="5dp"
            android:paddingTop="20dp"
            android:text="Date"
            android:textSize="15dp"
            android:layout_gravity="left"
            />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_below="@id/dateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:inputType="text"
            android:textSize="13dp"
            android:gravity="left" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_below="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Select Time..."
            android:padding="15dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/postBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTime"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:text="Post" />

        <Button
            android:id="@+id/viewBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postBtn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Cancel" />

    </RelativeLayout>

</ScrollView>